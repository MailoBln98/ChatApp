<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <!-- Button für aktuelle Chats -->
    <Button
        android:id="@+id/btn_chats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aktuelle Chats"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Button zum Suchen eines Geräts -->
    <Button
        android:id="@+id/btn_device_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gerät suchen"
        app:layout_constraintTop_toBottomOf="@id/btn_chats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Button zum Starten eines neuen Chats -->
    <Button
        android:id="@+id/btn_chat_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat starten"
        app:layout_constraintTop_toBottomOf="@id/btn_device_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>


