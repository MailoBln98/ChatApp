<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!--
        TextView zur Anzeige einer Nachricht innerhalb eines RecyclerView-Elements.
        Dieses Element ist Teil eines Nachrichtenlayouts und dient der Darstellung
        von Textinhalten wie Nachrichten oder Benachrichtigungen.

        Eigenschaften:
        - Breite wird dynamisch durch die Constraints auf Start und Ende angepasst.
        - Höhe passt sich dem Textinhalt an.
        - Schriftgröße ist auf 18sp gesetzt.
        - Padding sorgt für Innenabstand um den Text.
        - Zeigt maximal 2 Zeilen an, mit "..." bei Überlänge.
    -->
    <TextView
        android:id="@+id/message_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="16dp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

